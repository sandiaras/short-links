<?php

/**
 * @file
 * Contains custom_short_links.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function custom_short_links_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the custom_short_links module.
    case 'help.page.custom_short_links':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('My Awesome Module') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function custom_short_links_theme() {
  return [
    'custom_short_links' => [
      'render element' => 'children',
    ],
  ];
}
